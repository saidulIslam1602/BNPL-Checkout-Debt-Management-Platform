{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=${SQL_SERVER};Database=YourCompanyBNPL_Notification;User Id=${SQL_USER};Password=${SQL_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true",
    "Redis": "${REDIS_CONNECTION_STRING}",
    "ServiceBus": "${SERVICE_BUS_CONNECTION_STRING}"
  },
  "NotificationProviders": {
    "Email": {
      "Provider": "SendGrid",
      "SendGrid": {
        "ApiKey": "${SENDGRID_API_KEY}",
        "FromEmail": "noreply@yourcompany.com",
        "FromName": "YourCompany BNPL"
      }
    },
    "SMS": {
      "Provider": "Twilio",
      "Twilio": {
        "AccountSid": "${TWILIO_ACCOUNT_SID}",
        "AuthToken": "${TWILIO_AUTH_TOKEN}",
        "FromNumber": "${TWILIO_FROM_NUMBER}"
      }
    },
    "Push": {
      "Provider": "Firebase",
      "Firebase": {
        "ProjectId": "${FIREBASE_PROJECT_ID}",
        "CredentialsPath": "/app/secrets/firebase-credentials.json"
      }
    }
  },
  "NotificationSettings": {
    "MaxRetryAttempts": 5,
    "RetryDelayMinutes": 10,
    "BatchSize": 500,
    "QueueProcessingIntervalSeconds": 60,
    "TemplateRefreshIntervalMinutes": 120,
    "DeliveryTrackingEnabled": true,
    "RateLimiting": {
      "EmailPerMinute": 1000,
      "SmsPerMinute": 500,
      "PushPerMinute": 10000
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "${APPLICATION_INSIGHTS_CONNECTION_STRING}"
  }
}