{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RivertyBNPL_Payment;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "riverty-bnpl-super-secret-key-for-development-only-change-in-production",
    "Issuer": "https://api.riverty.com",
    "Audience": "https://api.riverty.com",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "ASPNETCORE_ENVIRONMENT": "Development",
  "PaymentSettings": {
    "DefaultCurrency": "NOK",
    "MaxRetryAttempts": 3,
    "PaymentExpiryHours": 24,
    "SettlementFrequency": "Daily",
    "LateFeeGracePeriodDays": 7,
    "MaxLateFeeAmount": 100.00,
    "BNPLSettings": {
      "MaxActivePlansPerCustomer": 5,
      "MinCreditScore": 600,
      "MaxPlanAmount": 100000.00,
      "InterestRates": {
        "PayIn3": 0.00,
        "PayIn4": 0.00,
        "PayIn6": 0.05,
        "PayIn12": 0.12,
        "PayIn24": 0.18
      },
      "DownPaymentPercentages": {
        "PayIn3": 0.33,
        "PayIn4": 0.25,
        "PayIn6": 0.20,
        "PayIn12": 0.15,
        "PayIn24": 0.10
      }
    }
  },
  "ExternalServices": {
    "RiskAssessmentApi": {
      "BaseUrl": "https://localhost:5002",
      "ApiKey": "risk-api-key",
      "TimeoutSeconds": 30
    },
    "NotificationApi": {
      "BaseUrl": "https://localhost:5003",
      "ApiKey": "notification-api-key",
      "TimeoutSeconds": 10
    },
    "SettlementApi": {
      "BaseUrl": "https://localhost:5004",
      "ApiKey": "settlement-api-key",
      "TimeoutSeconds": 60
    }
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckDatabaseConnectionString": "Server=(localdb)\\mssqllocaldb;Database=RivertyBNPL_HealthChecks;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
    }
  }
}