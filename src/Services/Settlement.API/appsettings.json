{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=YourCompanyBNPL_Settlement;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "yourcompany-bnpl-super-secret-key-for-development-only-change-in-production",
    "Issuer": "https://api.yourcompany.com",
    "Audience": "https://api.yourcompany.com",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/settlement-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "https://localhost:4200",
    "https://localhost:4201"
  ],
  "NorwegianBank": {
    "DnbApiBaseUrl": "https://api.dnb.no",
    "ClientId": "your-dnb-client-id",
    "ClientSecret": "your-dnb-client-secret",
    "CompanyAccountNumber": "12345678901",
    "RedirectUri": "https://api.yourcompany.com/settlement/callback",
    "TimeoutSeconds": 60
  },
  "SettlementSettings": {
    "DefaultCurrency": "NOK",
    "MinimumSettlementAmount": 100.00,
    "MaximumSettlementAmount": 10000000.00,
    "SettlementFrequency": "Daily",
    "ProcessingTime": "02:00:00",
    "RetryAttempts": 3,
    "RetryDelayMinutes": 30
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckDatabaseConnectionString": "Server=(localdb)\\mssqllocaldb;Database=YourCompanyBNPL_HealthChecks;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
    }
  }
}