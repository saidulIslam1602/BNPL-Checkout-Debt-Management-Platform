{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=YourCompanyBNPL_Risk;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Key": "yourcompany-bnpl-super-secret-key-for-development-only-change-in-production",
    "Issuer": "https://api.yourcompany.com",
    "Audience": "https://api.yourcompany.com",
    "ExpiryMinutes": 60
  },
  "CreditBureau": {
    "Bureaus": [
      {
        "Name": "Experian",
        "BaseUrl": "https://api.experian.no/v1",
        "ApiKey": "your-experian-api-key",
        "TimeoutSeconds": 30
      },
      {
        "Name": "Bisnode",
        "BaseUrl": "https://api.bisnode.no/v2",
        "ApiKey": "your-bisnode-api-key",
        "Username": "your-bisnode-username",
        "TimeoutSeconds": 30
      },
      {
        "Name": "Lindorff",
        "BaseUrl": "https://api.lindorff.no/v1",
        "ApiKey": "your-lindorff-api-key",
        "ClientId": "your-lindorff-client-id",
        "TimeoutSeconds": 30
      }
    ],
    "FolkeregisterBaseUrl": "https://api.folkeregisteret.no/v1",
    "FolkeregisterApiKey": "your-folkeregister-api-key",
    "KonkursregisterBaseUrl": "https://api.konkursregisteret.no/v1",
    "KonkursregisterApiKey": "your-konkursregister-api-key",
    "CreditHistoryBaseUrl": "https://api.credithistory.no/v1",
    "CreditHistoryApiKey": "your-credithistory-api-key"
  },
  "MLModels": {
    "Path": "models",
    "RetrainingSchedule": "0 2 * * 0",
    "MinAccuracyThreshold": 0.80,
    "MaxTrainingDataAge": 90
  },
  "RateLimiting": {
    "DefaultRateLimit": 100,
    "DefaultTimeWindow": 60,
    "RiskAssessmentRateLimit": 50,
    "FraudDetectionRateLimit": 200
  },
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "RecoveryTimeSeconds": 30,
    "TimeoutSeconds": 10
  },
  "ServiceBus": {
    "ConnectionString": "your-service-bus-connection-string",
    "TopicName": "risk-events"
  },
  "AllowedOrigins": [
    "https://localhost:4200",
    "https://merchant.yourcompany.com",
    "https://admin.yourcompany.com"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/risk-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckDatabaseConnectionString": "Server=(localdb)\\mssqllocaldb;Database=YourCompanyBNPL_HealthChecks;Trusted_Connection=true;MultipleActiveResultSets=true",
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  }
}