{
  "_comment": "This is a template configuration file. Copy to appsettings.json and update with your values",
  "AppSettings": {
    "CompanyName": "Your Company Name",
    "CompanyWebsite": "https://www.yourcompany.com",
    "SupportEmail": "support@yourcompany.com",
    "PlatformName": "BNPL Platform",
    "Environment": "Development"
  },
  "Branding": {
    "PrimaryColor": "#0066CC",
    "SecondaryColor": "#00AA66",
    "LogoUrl": "/assets/logo.png",
    "FaviconUrl": "/assets/favicon.ico"
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-at-least-32-characters-long",
    "Issuer": "https://api.yourcompany.com",
    "Audience": "https://api.yourcompany.com",
    "ExpiryMinutes": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=YourCompany_BNPL;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "ExternalServices": {
    "PaymentGateway": {
      "ApiKey": "your-payment-gateway-api-key",
      "BaseUrl": "https://api.paymentgateway.com"
    },
    "EmailProvider": {
      "ApiKey": "your-email-provider-api-key",
      "FromEmail": "noreply@yourcompany.com",
      "FromName": "Your Company BNPL"
    },
    "SmsProvider": {
      "AccountSid": "your-sms-account-sid",
      "AuthToken": "your-sms-auth-token",
      "FromNumber": "+1234567890"
    }
  },
  "NorwegianIntegration": {
    "Enabled": true,
    "VippsEnabled": true,
    "BankIDEnabled": true,
    "DnbApiBaseUrl": "https://api.dnb.no",
    "DnbClientId": "your-dnb-client-id",
    "DnbClientSecret": "your-dnb-client-secret"
  }
}